# 4-MakeFile to build executable

CC = gcc
SRC = main.c school.c
NAME = school
RM = rm
OBJ = $(SRC:%.c=%.o)
CFLAG := -Wall -Werror -Wextra -pedantic
.PHONY: clean oclean fclean re

%.o:%.c
	$(CC) $(CFLAG) -o $@ -c $<

all: $(OBJ)
	$(CC) -o $(NAME) $^
clean:
	$(RM) -f .*.swp *~ ~* $(NAME)
oclean:
	$(RM) -f $(OBJ)  $(NAME)

fclean:clean oclean

re: oclean all
